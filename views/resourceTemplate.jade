extends layout

block content
    div(class='container')
    h1 #{pageTitle} Resources
    .card-deck
        - resources = JSON.parse(resources);
        each item in resources
            div.card(style='max-width: 45rem;')
                h4.card-header #{item.title}
                div.card-body.p-3
                    p.card-text #{item.text}
                .card-footer
                    a(href=item.link) Link
                    
    br
    br
    h2  Add a resource
    form
        .form-group
        label(for='resourceTitle') Resource Title
        input.form-control#resourceTitle(type='text' placeholder='Enter Title')
        .form-group
        label(for='resourceText') Description of Resource
        textarea.form-control#resourceText(type='textarea' placeholder='Enter Text')
        .form-group
        label(for='resourceLink') Link to resource
        input.form-control#resourceLink(type='text' placeholder='Enter Hyperlink')
    br
    button.btn.btn-primary.submitButton Submit  
    script(src='/javascripts/resources.js')

    